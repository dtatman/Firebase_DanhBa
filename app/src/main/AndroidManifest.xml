<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FireBase_DanhBa"
        tools:targetApi="31">
        <!-- MainActivity, màn hình chính của ứng dụng -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AddContactActivity, màn hình để thêm mới liên hệ -->
        <activity
            android:name=".AddContactActivity"
            android:label="Thêm Liên Hệ"/>

        <!-- ContactDetailActivity, màn hình để xem và chỉnh sửa liên hệ -->
        <activity
            android:name=".ContactDetailActivity"
            android:label="Chi Tiết Liên Hệ"/>
    </application>

</manifest>